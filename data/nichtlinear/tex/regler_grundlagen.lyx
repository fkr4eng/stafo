\begin_inset Formula 
\begin{equation}
u=-\frac{\alpha(\xi,\eta)}{\beta(\xi,\eta)}=-\frac{L_{f}^{r}h(x)}{L_{g}L_{f}^{r-1}h(x)}\label{eq:zwangsbedingung-nulldynamik-u}
\end{equation}

\end_inset

ab.
