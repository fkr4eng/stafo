\begin{equation}
\begin{array}{rcl}
\dot{\zeta} & = & Lx_{1}\dot{x}_{1}+Cx_{2}\dot{x}_{2}\\
 & = & Ex_{1}-\frac{1}{R}x_{2}^{2}.
\end{array}\label{eq:hochsetz-dy}
\end{equation}

\end_inset

