\begin_inset External
	template XFig
	filename fluss_endl_fluchtzeit.fig

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Caption Standard

\begin_layout Plain Layout
Lösung mit endlicher Fluchtzeit (Beispiel
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand ref
reference "exa:EndlicheFluchtzeit"

\end_inset

)
\begin_inset CommandInset label
LatexCommand label
name "fig:Lösung-mit-endlicher Fluchtzeit"

