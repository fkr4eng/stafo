	filename fluss_diffeom.pdf
	width 75text%

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Caption Standard

\begin_layout Plain Layout
Invertierbarkeit des Flusses der linearen Differentialgleichung aus Beispiel
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand ref
reference "exa:invertierbarkeit-fluss-lin-dgl"
plural "false"
caps "false"
